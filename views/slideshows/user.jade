    script(src="/socket.io/socket.io.js")
    script(src='/js/build/bundle.js')   
 block pagescripts 
        script.
            $().ready(function() {
                
                ReactRenderers.renderSlideshowlist('react-root','#{userid}');
                //$('.carousel').carousel({
                //    interval: false
                //});
                $('#sidebar').affix({
                    offset: {
                    top: 75 
                    }
                });
            });
            var socket = io();
            socket.on('DisplaySlackMessage', function(msg){
                $('.carousel  div.item').removeClass('active');
                 if(msg.isImage){
                     $('.carousel-inner').append($(`<div class='item active'><img src='${msg.src}'/></div>`));
                 }else{
                     $('.carousel-inner').append($(`<div style="" class="item active slideContainer"><div class="slide">${msg}</div></div>`));
                }
            });
    
            