    script(src="/socket.io/socket.io.js")
    script(src='/js/build/bundle.js')   
 block pagescripts 
        script.
            $().ready(function() {
                $('.carousel').carousel({
                    interval: false
                });
            });
            var socket = io();
            socket.on('DisplaySlackMessage', function(msg){
                $('.carousel  div.item').removeClass('active');
                 if(msg.isImage){
                     $('.carousel-inner').append($(`<div class='item active'><img src='${msg.src}'/></div>`));
                 }else{
                     $('.carousel-inner').append($(`<div style="padding:10px;font-size:18px;line-height:35px;" class="item active">${msg}</div>`));
                }
            });
    
     